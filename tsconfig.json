{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "lib": ["es2017", "dom"],
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "checkJs": true,
        "baseUrl": "./resources/js",
        "paths": {
            "components/*": ["./components/*"],
            "pages/*": ["./pages/*"],
            "router/*": ["./router/*"],
            "modules/*": ["./modules/*"],
            "helpers/*": ["./helpers/*"],
            "services/*": ["./services/*"],
            "layouts/*": ["./layouts/*"],
            "types/*": ["./types/*"]
        }
    },
    "include": ["resources/js/**/*", "tests/js/services/helpers", "tests/js/component/**/*"]
}
