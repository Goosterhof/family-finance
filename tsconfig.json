{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "types": ["vite/client", "node"],
        "moduleResolution": "node",
        "lib": ["ESNext", "dom"],
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "allowJs": true,
        "noEmit": true,
        "checkJs": false,
        "jsx": "preserve",
        "baseUrl": "./resources/js",
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "useUnknownInCatchVariables": true,
        "paths": {
            "components/*": ["./components/*"],
            "pages/*": ["./pages/*"],
            "router/*": ["./router/*"],
            "domains/*": ["./domains/*"],
            "helpers/*": ["./helpers/*"],
            "services/*": ["./services/*"],
            "layouts/*": ["./layouts/*"],
            "types/*": ["./types/*"]
        }
    },
    "include": ["resources/js/**/*", "tests/js/services/helpers", "tests/js/component/**/*"]
}
